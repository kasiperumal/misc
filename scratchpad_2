#!/bin/bash

# Ask for main branch interactively
MAIN_BRANCH="develop"
FEATURE_BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo "Switching to main branch: $MAIN_BRANCH"
git checkout $MAIN_BRANCH || exit 1
git pull origin $MAIN_BRANCH || exit 1

echo "Merging feature branch: $FEATURE_BRANCH"
git merge --ff-only $FEATURE_BRANCH || {
    echo "‚ùå Fast-forward merge failed. Aborting."
    exit 1
}

echo "‚úÖ Merge successful. Running Gradle build..."
./gradlew build || {
    echo "‚ùå Gradle build failed."
    exit 1
}

echo "‚úÖ Build successful. Switch back to $FEATURE_BRANCH"
git checkout $FEATURE_BRANCH

# The next step (PR creation) is manual in IntelliJ
echo "üëâ Please go to Git ‚Üí GitHub ‚Üí Create Pull Request"
